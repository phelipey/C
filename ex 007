#include <stdio.h>
#include <ctype.h>
#include <cmath>
#include <cstring>
/*
#Faça um Programa que calcule a área de um quadrado, em seguida mostre o dobro
desta área para o usuário.
*/
int main() {
    float lado, area, dobro;
    printf("insira o lado do quadrado: ");
    scanf("%f", &lado);
    area = pow(lado, 2);
    dobro = area * 2;
    printf("o lado eh %.2f, a area eh %.2f e o dobro da area eh %.2f", lado, area, dobro);
    return 0;
}
